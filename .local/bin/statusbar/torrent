#!/bin/sh
# Shows the status of all torrents
transmission-remote -l | grep % |
	sed " # This first sed command is to ensure a desirable order with sort
	s/.*Stopped.*/A/g;
	s/.*Seeding.*/Z/g;
	s/.*100%.*/N/g;
	s/.*Idle.*/B/g;
	s/.*Uploading.*/L/g;
	s/.*%.*/M/g" |
		sort -h | uniq -c | sed " # Now we replace the standin letters with icons.
				s/A/栗/g;
				s/B/⌛️/g;
				s/L/祝/g;
				s/M/ /g;
				s/N/ /g;
				s/Z/菱/g" | awk '{print $2, $1}' | sed -e "s/ $//g" | tr '\n' ' '

case $BLOCK_BUTTON in
    1) $TERMINAL -e tremc ;;
    3) notify-send "Torrent module" "栗: paused
⏳: idle (seeds needed)
祝: uploading (unfinished)
 : downloading
 : done
菱: done and seeding" ;;
esac
