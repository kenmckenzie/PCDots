#!/bin/sh
# Shows an icon with internet status, also connects to vpn 

case $BLOCK_BUTTON in
	1) $TERMINAL -e nmtui ;;
	2) nmcli connection up Linode\ Wireguard >/dev/null 2>/dev/null && notify-send "VPN Connected" ;;
	3) pgrep -x dunst >/dev/null && notify-send "🌐 Internet module" "\- Click to connect
📡睊: no wifi connection
📶: wifi connection with quality
❎: no ethernet
🌐ﯱ: ethernet working
" ;;
esac

[ "$(cat /sys/class/net/w*/operstate)" = 'down' ] && wifiicon="" ||
	wifiicon=$(grep "^\s*w" /proc/net/wireless | awk '{ print "", int($3 * 100 / 70) "%" }')

printf "%s %s\n" "$wifiicon" "$(sed "s/down/ /;s/up/ﯱ /" /sys/class/net/e*/operstate)"

